<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.To_Do_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#F48FB1</item>
        <item name="colorPrimaryVariant">#E91E63</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFA000</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.To_Do_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.To_Do_App..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.To_Do_App..PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>